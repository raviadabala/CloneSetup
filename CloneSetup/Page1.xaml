        <Button Content="Login" Style="{StaticResource RoundCorner}" Height="23" HorizontalAlignment="Left" Margin="320,288,0,0" x:Name="button1" VerticalAlignment="Top" Width="104" Click="button1_Click" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
